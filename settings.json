{
    // ğŸ¨ AparÃªncia e Tema
    "workbench.colorTheme": "Tokyo Night",
    "workbench.iconTheme": "material-icon-theme",
    "window.zoomLevel": 2,
    "window.titleBarStyle": "custom",

    // ğŸ–‹ Tipografia e EstÃ©tica
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 22,
    "terminal.integrated.fontFamily": "'JetBrains Mono', monospace",
    "terminal.integrated.fontSize": 13,

    // ğŸŒ¬ï¸ Suavidade e Movimento
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorWidth": 2,

    // ğŸ‘“ Interface Limpa
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "all",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontal": "hidden",
    "workbench.statusBar.visible": false,
    "workbench.activityBar.location": "hidden",
    "workbench.sideBar.location": "left",
    "editor.codeLens": false,
    "editor.hover.enabled": true,
    "editor.hover.delay": 500,

    // ğŸ”§ UX Intuitiva
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,

    // ğŸš« DistraÃ§Ãµes e Popups
    "breadcrumbs.enabled": false,
    "explorer.confirmDelete": false,
    "editor.lightbulb.enabled": "off",
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    "workbench.editor.openSideBySideDirection": "right",

    // ğŸ§ª Dev Extras
    "terminal.integrated.scrollback": 10000,
    "explorer.compactFolders": false,
    "editor.wordWrap": "on",
    "editor.renderControlCharacters": false,

    // ğŸ§¼ Estilo para Terminais e LSP
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,

    // âš¡ Performance e responsividade
    "editor.fastScrollSensitivity": 2,
    "editor.mouseWheelZoom": true,

    // ğŸŒ€ SuavizaÃ§Ã£o do Scroll (Desabilitado)
    "editor.smoothScrolling": false,
    "workbench.list.smoothScrolling": false,
    "editor.mouseWheelScrollSensitivity": 1,
    "redhat.telemetry.enabled": true,
    "editor.guides.indentation": false,
    "explorer.confirmDragAndDrop": false
  }
